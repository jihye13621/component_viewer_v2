{
	"params": {
		"color-primary": {
			"key": "color-primary",
			"display": "Primary",
			"type": "color",
			"default": "#ffffff",
			"global": "color-primary",
			"required": false
		},
		"color-secondary": {
			"key": "color-secondary",
			"display": "Secondary",
			"type": "color",
			"default": "#151718",
			"global": "color-secondary",
			"required": false
		},
		"color-accent": {
			"key": "color-accent",
			"display": "Accent",
			"type": "color",
			"default": "#2521FF",
			"global": "color-accent",
			"required": false
		},
		"font-headline": {
			"key": "font-headline",
			"display": "Font Headline",
			"type": "string",
			"default": "./media/Unbounded-ExtraBold.ttf",
			"global": "font-headline",
			"required": false,
			"private": true
		},
		"font-body": {
			"key": "font-body",
			"display": "Font Body",
			"type": "string",
			"default": "./media/CooperHewitt-Bold.otf",
			"global": "font-body",
			"required": false,
			"private": true
		}
	},

	"text": {
		"measure": "letter-size"
	},
	"text-display": {
		"font": ["$", ["var", "font-headline"]],
		"measure": "cap-size",
		"case": "uppercase",
		"height": "110su",
		"leading": "20su",
		"kerning": -0.02
	},
	"text-headline": {
		"font": ["$", ["var", "font-headline"]],
		"height": "120su",
		"leading": "10su"
	},
	"text-title": {
		"font": ["$", ["var", "font-headline"]],
		"height": "70su",
		"leading": "10su"
	},
	"text-body": {
		"font": ["$", ["var", "font-body"]],
		"height": "65su",
		"leading": "10su"
	},
	"text-label": {
		"font": ["$", ["var", "font-body"]],
		"height": "40su",
		"leading": "14su"
	}
}