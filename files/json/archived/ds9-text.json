[
	"ds9-text",
	[
		{
			"key": "text",
			"display": "Text",
			"type": "textarea",
			"default": "Add text",
			"required": false
		},
		{
			"key": "color-1",
			"display": "Color 1",
			"type": "color",
			"default": "#ffffff",
			"required": false
		},
		{
			"key": "background",
			"display": "Background",
			"type": "color",
			"default": null,
			"required": false
		},
		{
			"key": "position",
			"display": "Position",
			"type": "position",
			"default": 5,
			"required": false
		},
		{
			"key": "size",
			"display": "Size",
			"type": "number",
			"default": 1.0,
			"required": false,
			"ui": {
				"input": "slider",
				"step": 0.05,
				"minimum": 0.5,
				"maximum": 1.5
			}
		},
		{
			"key": "#align",
			"type": "string",
			"default": "center",
			"required": false,
			"private": true,
			"script": ["$", ["switch", ["var", "position"], {
				"1": "bottom left",
				"2": "bottom center",
				"3": "bottom right",
				"4": "left",
				"5": "center",
				"6": "right",
				"7": "top left",
				"8": "top center",
				"9": "top right",
				"_": "center"
			}]]
		}
	],
	[
		["dsx-background", {
			"enabled": ["$", ["exists", ["var", "background"]]],
			"color": ["$", ["var", "background"]]
		}],
		["dsx-padding", {
			"position": ["$", ["var", "position"]]
		}, [
			["text", {
				"mixins": ["ds9-mixins", ["text-1", "animate-up"]],
				"string": ["$", ["var", "text"]],
				"justify": ["$", ["var", "#align"]],
				"boundary": "line"
			}]
		]]
	]
]