[
	"ds-maintainx-captions",
	[
		["dsx-mixins",
			"captions"
		],
		{
			"key": "color-1",
			"display": "Color",
			"type": "color",
			"default": [1, 1, 1, 1],
			"required": false
		},
		{
			"key": "color-2",
			"display": "Color",
			"type": "color",
			"default": [0, 0, 0, 0.7],
			"required": false
		},
		["dsx-mixins",
			"boilerplate-captions"
		],
		{
			"key": "max-words",
			"display": "Words",
			"type": "number",
			"default": 5,
			"required": false,
			"ui": {
				"input": "slider",
				"display": "number",
				"step": 1,
				"minimum": 1,
				"maximum": 12
			}
		},
		{
			"key": "position",
			"display": "Position",
			"type": "position",
			"default": [2, 0, 0],
			"ui": {
				"grid": true,
				"offset": false
			},
			"required": false
		}
	],
	[
		["null", {
			"mixins": ["dsx-mixins", ["set-dsx-su", "safezone"]]
		}, [
			["for-each", {
				"max-width": "800nsu",
				"align": ["$", ["var", "#align"]],
				"items": ["$",
					["transcript-split",
						["var", "transcript"],
						["var", "max-words"],
						"absolute"
					]
				]
			}, [
				["solid", {
					"start": ["$", ["concat", "+", ["key", ["first", ["var", "item"]], "relativeStart"]]],
					"duration": ["$",
						["-",
							["key", ["last", ["var", "item"]], "relativeEnd"],
							["key", ["first", ["var", "item"]], "relativeStart"]
						]
					],
					"layout": "vertical packed",
					"align": ["$", ["var", "#align"]],
					"color": ["$", ["var", "color-2"]],
					"padding": [
						"20su",
						"10su"
					]
				}, [
					["text", {
						"font": "./media/Inter-SemiBold.ttf",
						"measure": "letter-size",
						"height": "60su",
						"justify": ["$", ["var", "#align"]],
						"transcript": ["$", ["var", "item"]],
						"color": ["$", ["var", "color-1"]],
						"stroke": "4su",
						"stroke-color": [0, 0, 0, 1]
					}]
				]]
			]]
		]]
	]
]