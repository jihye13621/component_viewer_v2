[
	"ds-getwell-captions-box",
	[
		["dsx-mixins",
			"captions"
		],
		["ds-getwell-mixins",
			"colors",
			"dark-mode-colors"
		],
		["dsx-mixins",
			"boilerplate-captions"
		],
		{
			"key": "max-words",
			"display": "Words",
			"type": "number",
			"default": 6,
			"required": false,
			"ui": {
				"input": "slider",
				"display": "number",
				"step": 1,
				"minimum": 1,
				"maximum": 12
			}
		},
		{
			"key": "position",
			"display": "Position",
			"type": "position",
			"default": [2, 0, 0],
			"ui": {
				"grid": true,
				"offset": false
			},
			"required": false
		}
	],
	[
		["null", {
			"mixins": ["dsx-mixins", ["set-dsx-su", "safezone"]]
		}, [
			["null", {
				"max-width": "800nsu",
				"layout": "vertical packed",
				"align": ["$", ["var", "#align"]]
			}, [
				["text", {
					"mixins": ["ds-getwell-mixins",
						"font-captions-box"
					],
					"justify": ["$", ["var", "#align"]],
					"transcript": ["$",
						["transcript-split",
							["var", "transcript"],
							["var", "max-words"]
						]
					],
					"color": ["$", ["var", "#color-text"]],
					"background-color": ["$", ["var", "#color-bg"]],
					"background-radius": "10su",
					"background-padding": [
						"25su",
						"25su"
					],
					"animations": [
						{
							"opacity": 0.5,
							"background-opacity": 1
						},
						{
							"mix": [[0, 0], [0.5, 1]],
							"opacity": 1
						}
					]
				}]
			]]
		]]
	]
]